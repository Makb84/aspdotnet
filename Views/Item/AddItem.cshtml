@{
    ViewBag.Title = "Add Items to Store";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
</head>
<body>
    <h2>Add Items to Store</h2>
    <form method="post" action="@Url.Action("AddItems", "Store")">
        <div>
            <label for="itemName">Item Name:</label>
            <input type="text" id="itemName" name="itemName" required />
        </div>
        <div>
            <label for="itemDescription">Item Description:</label>
            <textarea id="itemDescription" name="itemDescription"></textarea>
        </div>
        <div>
            <label for="itemPrice">Item Price:</label>
            <input type="number" id="itemPrice" name="itemPrice" step="0.01" required />
        </div>
        <div>
            <label for="itemQuantity">Item Quantity:</label>
            <input type="number" id="itemQuantity" name="itemQuantity" required />
        </div>
        <div>
            <button type="submit">Add Item</button>
        </div>
        <div>
            <a asp-area="" asp-controller="Item" asp-action="Index">back</a>
        </div>
    </form>
</body>
</html>
